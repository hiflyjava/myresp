  <select id="getStaffsByKeywords" resultMap="BaseResultMap">


    SELECT h.*,he.id as hid,pc.id as countryId, he.name as hname,he.time_id as hTimeId  ,h.user_no as userNo,h.unlock_password as unlockPassword,de.name as dname,po.name as pname,pc.name as pcname  from  pg_staff h

    INNER join     pgsh_hotel_entity  he   on  he.id =h.entity_id

    left join department de on de.id =h.department_id

    left join position   po  on po.id =h.position_id

    left join pgsh_country pc on pc.id =h.country
    where he.id =#{entityId}
    <if test="name != null  and  name !='' " >
      and  h.name like '%${name}%'
    </if>


  </select>


