  <select id="getStaffsByDid" resultMap="StaffsManyDayAttenceOutMap">
    select p.*,
    d.name as dname,
    po.name as pname
    from pg_staff p inner  join  department d on d.id =p.department_id
    inner  join  position po  on po.id = p.position_id
    where  p.entity_id =#{entityId}
    <if test="departmentId != null and departmentId != '' ">
      and p.department_id in( select id from  department where FIND_IN_SET(id,getChildrenDep(#{departmentId})) and entity_id =#{entityId})
    </if>

