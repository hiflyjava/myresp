        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="phone" property="phone"/>
        <result column="surname" property="surname"/>
        <result column="address" property="address"/>
        <result column="enabled" property="enabled"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="userface" property="userface"/>
        <result column="remark" property="remark"/>
        <result column="department_id" property="departmentId"/>
        <result column="position_id" property="positionId"/>

        <result column="sex" property="sex" jdbcType="INTEGER" />
        <result column="country" property="country" jdbcType="VARCHAR" />
        <result column="entity_id" property="entityId" jdbcType="INTEGER" />
        <result column="time_id" property="timeId" jdbcType="INTEGER" />
        <result column="unlock_password" property="unlockPassword" jdbcType="VARCHAR" />
        <result column="joinTime" property="joinTime" jdbcType="DATE" />
        <result column="extend2" property="extend2" jdbcType="INTEGER" />
        <result column="user_no" property="userNo" jdbcType="VARCHAR" />
        <result column="extend3" property="extend3" jdbcType="VARCHAR" />
        <result column="extend4" property="extend4" jdbcType="INTEGER" />
        <result column="dname" property="dname" jdbcType="VARCHAR" />
        <result column="pname" property="pname" jdbcType="VARCHAR" />
        <result column="pcname" property="pcname" jdbcType="VARCHAR" />
        <result column="wstartTime" property="wstartTime" jdbcType="VARCHAR" />
        <result column="wendTime" property="wendTime" jdbcType="VARCHAR" />
        <result column="waddTime" property="waddTime" jdbcType="VARCHAR" />


    </resultMap>
    <resultMap id="lazyLoadRoles" type="com.pg.bean.Hr" extends="BaseResultMap">
        <collection property="roles" ofType="com.pg.bean.Role" select="com.pg.mapper.HrMapper.getRolesByHrId"
                    column="id"></collection>
    </resultMap>
    <resultMap id="eagerLoadRoles" type="com.pg.bean.Hr" extends="BaseResultMap">
        <collection property="roles" ofType="com.pg.bean.Role">
            <id property="id" column="rid"/>
            <result property="name" column="rname"/>
            <result property="nameZh" column="rnameZh"/>
        </collection>
    </resultMap>
    <select id="loadUserByUsername" resultMap="lazyLoadRoles">
        select * from user WHERE username=#{username} and enabled =1;
    </select>
    <select id="getRolesByHrId" resultType="com.pg.bean.Role">
        SELECT r.* FROM user_role h,role r where h.rid=r.id AND h.hrid=#{id}
    </select>
    <insert id="hrReg">
        INSERT INTO user set username=#{username},password=#{password}
    </insert>
    <select id="getHrsByKeywords" resultType="com.pg.bean.Hr">

        select * from user r

        <where>
            r.id !=3
            <if test="username !=null and username !=''">
                and r.username like '%${username}%'
            </if>

        </where>

        order by r.id

    </select>
    <select id="getHrById" resultMap="eagerLoadRoles">
        select h.*,`r`.`id` AS `rid`,`r`.`name` AS `rname`,`r`.`nameZh` AS `rnameZh` from ((`user` `h` left join `user_role`
        `h_r` on ((`h`.`id` = `h_r`.`hrid`))) left join `role` `r` on ((`h_r`.`rid` = `r`.`id`))) where h.`id`=#{hrId}
    </select>
    <update id="updateHr" parameterType="com.pg.common.dto.HrDto">
